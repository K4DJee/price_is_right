generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//PostgreSQL
model User {
  id        String     @id @default(uuid())
  googleId  String?    @unique
  password  String?
  questions Question[]
  nickname String
  email     String     @unique
  score     Int        @default(0)
  createdAt DateTime   @default(now()) @db.Timestamptz
  updatedAt DateTime   @updatedAt @db.Timestamptz

  @@map("users")
}

model Question {
  id            String @id @default(uuid())
  text          String
  correctAnswer Float 
  userId        String
  user          User   @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("questions")
}

model Match {
  id            String   @id @default(uuid())
  users         String[]
  winner        String?
  loser         String?
  p1Answer      Float?
  p2Answer      Float?
  correctAnswer Float?
  date          DateTime @default(now()) @db.Timestamptz()

  @@map("matches")
}
